<config>
    <tabs>
        <activo translate="label">
            <label>Activo Extensions</label>
            <sort_order>101</sort_order>
        </activo>
    </tabs>
    <sections>
        <activo_adwordsconversion translate="label" module="adwordsconversion">
            <class>separator-top</class>
            <label>AdWords Conversion Tracking</label>
            <tab>activo</tab>
            <frontend_type>text</frontend_type>
            <sort_order>77</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <global translate="label">
                    <label>Google AdWords Conversion Tracking Code Oprions</label>
                    <expanded>1</expanded>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enable?</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </enabled>
                        <id translate="label">
                            <label>Conversion ID</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Enter the conversion ID for your Google Adwords account.</comment>
                        </id>
                        <label translate="label">
                            <label>Conversion Label</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Enter the label to be used.</comment>
                        </label>
                        <language translate="label">
                            <label>Conversion Language</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Enter the language. If unsure, the default language in the US is 'en'.</comment>
                        </language>
                        <bgcolor translate="label">
                            <label>Background Color</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Background color in HEX CSS notation. Don't enter the '#' prefix.</comment>
                        </bgcolor>
                        <totalfield>
                            <label>Total Field Used</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adwordsconversion/system_config_totalfieldOptions</source_model>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Select which total field to use for the value passed to Google Adwords: Subtotal or Grand Total.</comment>
                        </totalfield>
                        <isdebug>
                            <label>Debug Mode</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Debug mode shows all the values passed back to Google Adwords in HTML visible format for debugging purposes.</comment>
                        </isdebug>
                    </fields>
                </global>
            </groups>
        </activo_adwordsconversion>
    </sections>
</config>
